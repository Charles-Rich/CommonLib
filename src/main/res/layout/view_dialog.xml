<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/common_dialog_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mTv_Title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="@string/common_text_title_alert"
            android:textColor="@color/gray_07"
            android:textSize="18sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/mLL_Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/mTv_Message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingMultiplier="1.5"
                android:minHeight="60dp"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp" 
                android:textColor="@color/gray_07"
                android:textSize="16sp"
                android:text="@null"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="@color/gray_08" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="2" >

            <Button
                android:id="@+id/mBtn_NegativeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_button_common_white_left_buttom_no_corners_5"
                android:text="@string/common_button_cancel"
                android:textColor="@color/gray_07"
                android:textSize="15sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray_08" />

            <Button
                android:id="@+id/mBtn_PositiveButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_button_common_white_right_buttom_no_corners_5"
                android:text="@string/common_button_ok"
                android:textColor="@color/gray_07"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>